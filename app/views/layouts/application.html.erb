<!DOCTYPE html>
<html>
  <head>
    <title>Store</title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body>

    <% if current_user %>
  <%#= "Signed in as #{current_user.email}.Not you?" %>
      <%= link_to "Sign out", logout_path %>
    <% else %>
      <%= link_to "Signup", new_user_path %>
      <%= link_to "Sign in", new_user_session_path %>
    <% end %>
    <%= yield %>
  </body>
</html>
